{
    "type": "project",
    "license": "proprietary",
    "require": {
        "php": "^7.4",
        "ext-SimpleXML": "^7.2",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "ext-json": "*",
        "ext-libxml": "*"
    },
    "require-dev": {
        "phploc/phploc": "^6.0",
        "phpstan/phpstan": "^0.13",
        "phpunit/phpunit": "^8.5"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "container-deploy":  [
            "rm -rf var/cache/prod/*",
            "yarn install",
            "yarn run build",
            "yarn install --production"
        ],
        "container-deploy-dev":  [
            "rm -rf var/cache/dev/*",
            "rm -rf var/cache/prod/*",
            "yarn install",
            "yarn run build"
        ],
        "deploy" : [
            "git pull",
            "docker exec php-cli composer container-deploy",
            "docker exec php-cli composer install --no-dev"
        ],
        "deploy-dev" : [
            "docker exec php-cli composer container-deploy-dev",
            "docker exec php-cli composer install"
        ],
        "prod-up": [
            "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build",
            "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
            "@deploy"
        ],
        "dev-up": [
            "docker-compose build",
            "docker-compose up -d",
            "@deploy-dev"
        ]
    }
}
